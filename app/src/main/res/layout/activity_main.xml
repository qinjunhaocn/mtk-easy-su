<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MaterialYou 标题栏 -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/app_name"
            app:titleTextAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 内容区域 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

<!-- 贡献者卡片 -->
            <com.google.android.material.card.MaterialCardView
                style="@style/MaterialYouCard"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/credits"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- 贡献者1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@mipmap/johnwu_img"
                            android:background="?attr/colorPrimary"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="16dp"
                            app:tint="?attr/colorOnPrimary" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="John Wu"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Magisk 开发者"
                                android:textSize="14sp"
                                android:textColor="?android:textColorSecondary" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 贡献者2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_person_black_24dp"
                            android:background="?attr/colorPrimary"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="16dp"
                            app:tint="?attr/colorOnPrimary" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Diplomatic"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="mtk-su 开发者"
                                android:textSize="14sp"
                                android:textColor="?android:textColorSecondary" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 贡献者3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_person_black_24dp"
                            android:background="?attr/colorPrimary"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="16dp"
                            app:tint="?attr/colorOnPrimary" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="JunioJsv"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="此应用创建者"
                                android:textSize="14sp"
                                android:textColor="?android:textColorSecondary" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 贡献者4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@mipmap/kocleo_img"
                            android:background="?attr/colorPrimary"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="16dp"
                            app:tint="?attr/colorOnPrimary" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/kocleo"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/kocleo_about"
                                android:textSize="14sp"
                                android:textColor="?android:textColorSecondary" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 捐赠按钮 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mButtonDonate"
                        style="@style/CustomButton"
                        android:layout_width="match_parent"
                        android:text="@string/donate"
                        app:icon="@drawable/ic_content_copy_black_24dp"
                        app:iconSize="22dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

<!-- 第二个 MaterialYou 卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                style="@style/MaterialYouCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                                android:text="@string/run_as_64_bits"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/mRunAs64" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                                android:text="@string/boot_run"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/mBootRun" />

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                style="@style/MaterialYouCard">

                <LinearLayout style="@style/CustomCardViewContainer">

                    <TextView
                        style="@style/CustomCardViewTitle"
                        android:text="@string/log" />

                    <TextView
                        android:textSize="16sp"
                        android:id="@+id/mLog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="250dp"
                        android:scrollbars="vertical"
                        android:text="@string/log_null" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mButtonCopy"
                        style="@style/CustomButtonOutlined"
                        android:layout_width="match_parent"
                        android:enabled="false"
                        android:text="@string/copy"
                        app:icon="@drawable/ic_content_copy_black_24dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>




            <com.google.android.material.card.MaterialCardView
                style="@style/CustomCardView"
                android:layout_marginBottom="16dp">

                <LinearLayout style="@style/CustomCardViewContainer">

                    <TextView
                        style="@style/CustomCardViewTitle"
                        android:text="@string/about_word" />

                    <TextView
                        style="@style/CustomCardViewTitleSmall"
                        android:text="@string/app_name" />

                    <TextView
                        android:id="@+id/mVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        style="@style/CustomCardViewText"
                        android:text="@string/about" />



                    <TextView
                    style="@style/CustomCardViewTitleSmall"
                    android:text="@string/warning_word" />


                    <TextView
                        style="@style/CustomCardViewText"
                        android:text="@string/about" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mButtonBilibili"
                        style="@style/CustomButtonOutlined"
                        android:layout_width="match_parent"
                        android:text="@string/bilibili"
                        app:icon="@drawable/ic_bilibili"
                        app:iconSize="22dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mButtonGithub"
                        style="@style/CustomButtonOutlined"
                        android:layout_width="match_parent"
                        android:text="@string/github"
                        app:icon="@drawable/ic_home_black_24dp"
                        app:iconSize="24dp"/>


                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>












        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 右下角的 MaterialYou # 按钮 -->
    <!-- 右下角的 MaterialYou # 按钮 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/mButtonTryRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="24dp"
        android:contentDescription="尝试获取Root权限"
        android:src="@drawable/ic_launcher_foreground"
        app:backgroundTint="?attr/colorPrimary"
        app:maxImageSize="58dp"
        app:tint="?attr/colorOnPrimary"
        app:elevation="6dp"
        app:fabCustomSize="60dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>